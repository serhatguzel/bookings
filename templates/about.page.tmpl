{{template "base" . }}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>About Us</h1>
                <p>This is the about page of our website.</p>
                <p>Here you can find information about our mission and values.</p>
                <p>This came from the template: {{index .StringMap "test"}}</p>
                <p> {{ if ne (index .StringMap "remote_ip") ""}}
                    Your remote IP is: {{index .StringMap "remote_ip"}}
                {{else}}
                    I don't know your remote IP address. Visit the <a href= "/">home page</a> so  I can see it.
                {{end}}                
                </p>
            </div>
        </div>
    </div>
{{end}}